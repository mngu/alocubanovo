{% extends 'CbnvMainBundle:Admin:admin_layout.html.twig' %}

{% block adminContent -%}
    <h1>{{ title|capitalize }}</h1>
    <a href="{{ return_path }}">
        Back to the list
    </a>
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        {% if entity.id is empty %}
            <div class="form-group">
                {{ form_label(form.file, label|default(null), { 'label_attr': { 'class': 'col-sm-2 control-label' } }) }}
                <div class="col-sm-5">
                    {{ form_widget(form.file) }}
                </div> 
            </div>
        {% else %}
            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-2">
                    <img src="{{ asset(entity.webPath) }}" alt="{{ entity.alt }}" />
                </div>
            </div>
        {% endif %}
        <div class="form-group">
            {{ form_label(form.album, label|default(null), { 'label_attr': { 'class': 'col-sm-2 control-label' } }) }}
            <div class="col-sm-5">
                {{ form_widget(form.album) }}
            </div> 
        </div>
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-2">
                {{ form_widget(form.submit, { 'attr': { 'class': 'form-control' }}) }}
            </div>
        </div>
        {{ form_widget(form._token) }}

{% endblock %}
